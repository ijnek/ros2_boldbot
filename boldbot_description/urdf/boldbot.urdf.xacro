<?xml version="1.0" ?>

<robot name="boldbot" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:macro name="mx28" params="name xyz rpy">
    <link name="${name}">
      <visual>
        <origin xyz="${xyz}" rpy="${rpy}" />
        <geometry>
          <mesh filename="package://boldbot_description/meshes/mx28.stl" scale="0.001 0.001 0.001" />
        </geometry>
        <material name="DarkGrey">
          <color rgba="0.20 0.20 0.20 1.0"/>
        </material>
      </visual>
      <collision>
        <origin xyz="${xyz}" rpy="${rpy}" />
        <geometry>
          <mesh filename="package://boldbot_description/meshes/mx28.stl" scale="0.001 0.001 0.001" />
        </geometry>
      </collision>
      <inertial>
        <origin xyz="${xyz}" rpy="${rpy}" />
        <mass value="0.072"/>
        <inertia ixx="0.00002292366"  ixy="0.0"  ixz="0.0" iyy="0.00001516566" iyz="0.0" izz="0.00002296632" />
      </inertial>
    </link>
    <gazebo reference="${name}">
      <material>Gazebo/DarkGrey</material>
      <selfCollide>true</selfCollide>
    </gazebo>
  </xacro:macro>

  <!-- dummy first link, directly connects with torso -->
  <link name="base_link" />

  <joint name="base_joint" type="fixed">
    <child link="torso"/>
    <parent link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0" />
  </joint>

  <link name="torso">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0" />
      <geometry>
        <box size="0.1 0.109 0.045"/>
      </geometry>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0" />
      <geometry>
        <box size="0.1 0.109 0.045"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.1"/>
      <inertia ixx="1e-3"  ixy="0.0"  ixz="0.0" iyy="1e-3" iyz="0.0" izz="1e-3" />
    </inertial>
  </link>
  <gazebo reference="torso">
    <material>Gazebo/Grey</material>
    <selfCollide>true</selfCollide>
  </gazebo>

  <joint name="torso-mx28-head-pan" type="fixed">
    <parent link="torso" />
    <child link="mx28-head-pan" />
    <origin rpy="0 0 0" xyz="0.02 0 0.045" />
  </joint>

  <xacro:mx28 name="mx28-head-pan" xyz="0 0 0" rpy="0 0 3.141592654"/>

  <joint name="head-pan" type="revolute">
    <parent link="mx28-head-pan" />
    <child link="neck" />
    <origin rpy="0 0 0" xyz="0 0 0" />
    <axis xyz="0 0 1" />
    <limit effort="2.8" velocity="5.6548668" lower="-2.6179939" upper="2.6179939" />
  </joint>

  <link name="neck">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0.03" />
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
    </visual>
    <inertial>
      <origin xyz="0 0 0" />
      <mass value="1e-3"/>
      <inertia ixx="1e-4"  ixy="0.0"  ixz="0.0" iyy="1e-4" iyz="0.0" izz="1e-4" />
    </inertial>
  </link>

  <joint name="head-tilt" type="revolute">
    <parent link="neck" />
    <child link="mx28-head-tilt" />
    <origin xyz="0 0 0.05" />
    <axis xyz="0 1 0" />
    <limit effort="2.8" velocity="5.6548668" lower="-2.6179939" upper="2.6179939" />
  </joint>

  <xacro:mx28 name="mx28-head-tilt" xyz="0 0 0" rpy="0 -1.570796327 -1.570796327"/>

  <joint name="head-tilt-head" type="fixed">
    <parent link="mx28-head-tilt" />
    <child link="head" />
    <origin rpy="0 0 0" xyz="0 0 0.065" />
  </joint>

  <link name="head">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="0.05 0.1 0.04" />
      </geometry>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="0.05 0.1 0.04" />
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" />
      <mass value=".2"/>
      <inertia ixx="1e-3"  ixy="0.0"  ixz="0.0" iyy="1e-3" iyz="0.0" izz="1e-3" />
    </inertial>
  </link>
  <gazebo reference="head">
    <material>Gazebo/Grey</material>
    <selfCollide>true</selfCollide>
  </gazebo>

  <!-- Arms -->

  <xacro:macro name="arm" params="side">
    <xacro:property name="lr" value="${1 if side == 'l' else -1}" />

    <joint name="torso-mx28-shoulder-pitch-${side}" type="fixed">
      <parent link="torso" />
      <child link="mx28-shoulder-pitch-${side}" />
      <origin xyz="0.02 ${lr * 0.04} 0.045" />
    </joint>

    <xacro:mx28 name="mx28-shoulder-pitch-${side}" xyz="0 0 0" rpy="${lr * 1.570796327} 0 3.141592654"/>

    <joint name="shoulder-pitch-${side}" type="revolute">
      <parent link="mx28-shoulder-pitch-${side}" />
      <child link="shoulder-${side}" />
      <origin rpy="0 0 0" xyz="0 0 0" />
      <axis xyz="0 ${lr} 0" />
      <limit effort="2.8" velocity="5.6548668" lower="-2.6179939" upper="2.6179939" />
    </joint>

    <link name="shoulder-${side}">
      <visual>
        <origin rpy="0 0 0" xyz="0 ${lr * 0.021} -0.008" />
        <geometry>
          <box size="0.01 0.01 0.01"/>
        </geometry>
      </visual>
      <inertial>
        <origin xyz="0 0 0" />
        <mass value="0.1"/>
        <inertia ixx="1e-4"  ixy="0.0"  ixz="0.0" iyy="1e-4" iyz="0.0" izz="1e-4" />
      </inertial>
    </link>

    <joint name="shoulder-roll-${side}" type="revolute">
      <parent link="shoulder-${side}" />
      <child link="mx28-shoulder-roll-${side}" />
      <origin xyz="0 ${lr * 0.042} -0.016" rpy="${lr * 0.785398163} 0 0" />
      <axis xyz="1 0 0" />
      <limit effort="2.8" velocity="5.6548668" lower="-2.6179939" upper="2.6179939" />
    </joint>

    <xacro:mx28 name="mx28-shoulder-roll-${side}" xyz="0 0 0" rpy="0 1.570796327 0"/>

    <joint name="mx28-shoulder-roll-${side}-mx28-elbow-${side}" type="fixed">
      <parent link="mx28-shoulder-roll-${side}" />
      <child link="mx28-elbow-${side}" />
      <origin xyz="0.016 0 -0.06" />
    </joint>

    <xacro:mx28 name="mx28-elbow-${side}" xyz="0 0 0" rpy="${lr * 1.570796327} 0 3.141592654"/>

    <joint name="elbow-${side}" type="revolute">
      <parent link="mx28-elbow-${side}" />
      <child link="lower-arm-${side}" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <axis xyz="0 ${lr} 0" />
      <limit effort="2.8" velocity="5.6548668" lower="-2.6179939" upper="2.6179939" />
    </joint>

    <link name="lower-arm-${side}">
      <visual>
        <origin xyz="0.055 ${lr * 0.02} -0.02" rpy="${lr * 1.570796327} 0 0" />
        <geometry>
          <mesh filename="package://boldbot_description/meshes/armcover.stl" scale="0.001 0.001 0.001"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0.055 ${lr * 0.02} -0.02" rpy="${lr * 1.570796327} 0 0" />
        <geometry>
          <mesh filename="package://boldbot_description/meshes/armcover.stl" scale="0.001 0.001 0.001"/>
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0 0 0" />
        <mass value="0.1"/>
        <inertia ixx="1e-3"  ixy="0.0"  ixz="0.0" iyy="1e-3" iyz="0.0" izz="1e-3" />
      </inertial>
    </link>
    <gazebo reference="lower-arm-${side}">
      <material>Gazebo/Grey</material>
      <selfCollide>true</selfCollide>
    </gazebo>
  </xacro:macro>

  <xacro:arm side="l"/>
  <xacro:arm side="r"/>

  <!-- Left Leg -->

  <xacro:macro name="leg" params="side">
    <xacro:property name="lr" value="${1 if side == 'l' else -1}"/>

    <joint name="torso-mx28-hip-yaw-${side}" type="fixed">
      <parent link="torso" />
      <child link="mx28-hip-yaw-${side}" />
      <origin xyz="0.018 ${lr * 0.037} -0.04" />
    </joint>
    
    <xacro:mx28 name="mx28-hip-yaw-${side}" xyz="0 0 0" rpy="${lr * 3.141592654} 0 3.141592654"/>

    <joint name="hip-yaw-${side}" type="continuous">
      <parent link="mx28-hip-yaw-${side}" />
      <child link="hip-bracket-${side}" />
      <origin rpy="0 0 0" xyz="0 0 0" />
      <axis xyz="0 0 -1" />
      <limit effort="2.8" velocity="5.6548668" lower="-2.6179939" upper="2.6179939" />
    </joint>

    <link name="hip-bracket-${side}">
      <inertial>
        <origin xyz="0 0 0" />
        <mass value=".1"/>
        <inertia ixx="1e-4"  ixy="0.0"  ixz="0.0" iyy="1e-4" iyz="0.0" izz="1e-4" />
      </inertial>
    </link>

    <joint name="hip-roll-${side}" type="continuous">
      <parent link="hip-bracket-${side}" />
      <child link="mx28-hip-roll-${side}" />
      <origin rpy="0 0 0" xyz="-0.05 0 -0.04" /> <!-- TODO: guessed -->
      <axis xyz="-1 0 0" />
      <limit effort="2.8" velocity="5.6548668" lower="-2.6179939" upper="2.6179939" />
    </joint>

    <xacro:mx28 name="mx28-hip-roll-${side}" xyz="0 0 0" rpy="0 1.570796327 0"/>

    <joint name="mx28-hip-roll-mx28-hip-pitch-${side}" type="fixed">
      <parent link="mx28-hip-roll-${side}" />
      <child link="mx28-hip-pitch-${side}" />
      <origin xyz="0.05 0 0" rpy="0 0 0" />
    </joint>
    
    <xacro:mx28 name="mx28-hip-pitch-${side}" xyz="0 0 0" rpy="1.570796327 1.570796327 0"/>

    <joint name="mx28-hip-pitch-upper-leg-${side}" type="continuous">
      <parent link="mx28-hip-pitch-${side}" />
      <child link="upper-leg-${side}" />
      <origin xyz="0 0 0" rpy="0 0 0" />
      <axis xyz="0 -1 0" />
      <limit effort="2.8" velocity="5.6548668" lower="-2.6179939" upper="2.6179939" />
    </joint>
    
    <link name="upper-leg-${side}">
      <visual>
        <origin xyz="0 0 0" rpy="0 1.570796327 0" />
        <geometry>
          <mesh filename="package://boldbot_description/meshes/thigh.stl" scale="0.001 0.001 0.001"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 1.570796327 0" />
        <geometry>
          <mesh filename="package://boldbot_description/meshes/thigh.stl" scale="0.001 0.001 0.001"/>
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0 0 0" />
        <mass value="0.1"/>
        <inertia ixx="1e-3"  ixy="0.0"  ixz="0.0" iyy="1e-3" iyz="0.0" izz="1e-3" />
      </inertial>
    </link>
    <gazebo reference="upper-leg-${side}">
      <material>Gazebo/Grey</material>
      <selfCollide>true</selfCollide>
    </gazebo>

    <joint name="upper-leg-mx28-knee-${side}" type="fixed">
      <parent link="upper-leg-${side}" />
      <child link="mx28-knee-${side}" />
      <origin xyz="0 0 -0.143" rpy="0 0 0" />
    </joint>
    
    <xacro:mx28 name="mx28-knee-${side}" xyz="0 0 0" rpy="1.570796327 -1.570796327 0"/>
    
    <joint name="mx28-knee-lower-leg-${side}" type="continuous">
      <parent link="mx28-knee-${side}" />
      <child link="lower-leg-${side}" />
      <origin xyz="0 0 0" rpy="0 0 0" />
      <axis xyz="0 -1 0" />
      <limit effort="2.8" velocity="5.6548668" lower="-2.6179939" upper="2.6179939" />
    </joint>

    <link name="lower-leg-${side}">
      <visual>
        <origin xyz="0.0175 0 -0.019" rpy="3.141592654 1.570796327 0" />
        <geometry>
          <mesh filename="package://boldbot_description/meshes/shin.stl" scale="0.001 0.001 0.001"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0.0175 0 -0.019" rpy="3.141592654 1.570796327 0" />
        <geometry>
          <mesh filename="package://boldbot_description/meshes/shin.stl" scale="0.001 0.001 0.001"/>
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0 0 0" />
        <mass value="0.1"/>
        <inertia ixx="1e-3"  ixy="0.0"  ixz="0.0" iyy="1e-3" iyz="0.0" izz="1e-3" />
      </inertial>
    </link>
    <gazebo reference="lower-leg-${side}">
      <material>Gazebo/Grey</material>
      <selfCollide>true</selfCollide>
    </gazebo>
    
    <joint name="lower-leg-mx28-ankle-pitch-${side}" type="continuous">
      <parent link="lower-leg-${side}" />
      <child link="mx28-ankle-pitch-${side}" />
      <origin xyz="0 0 -0.143" rpy="0 0 0" />
      <axis xyz="0 -1 0" />
      <limit effort="2.8" velocity="5.6548668" lower="-2.6179939" upper="2.6179939" />
    </joint>

    <xacro:mx28 name="mx28-ankle-pitch-${side}" xyz="0 0 0" rpy="1.570796327 -1.570796327 0"/>

    <joint name="mx28-ankle-pitch-mx28-ankle-role-${side}" type="fixed">
      <parent link="mx28-ankle-pitch-${side}" />
      <child link="mx28-ankle-role-${side}" />
      <origin xyz="-0.05 0 0" rpy="0 0 0" />
    </joint>

    <xacro:mx28 name="mx28-ankle-role-${side}" xyz="0 0 0" rpy="3.141592654 -1.570796327 0"/>

    <joint name="mx28-ankle-role-foot-${side}" type="continuous">
      <parent link="mx28-ankle-role-${side}" />
      <child link="foot-${side}" />
      <origin xyz="0 0 0" rpy="0 0 0" />
      <axis xyz="1 0 0" />
      <limit effort="2.8" velocity="5.6548668" lower="-2.6179939" upper="2.6179939" />
    </joint>

    <link name="foot-${side}">
      <visual>
        <origin xyz="0.05 ${lr * 0.01} -0.02" rpy="0 0 -1.570796327" /> <!-- TODO: guessed y offset -->
        <geometry>
          <mesh filename="package://boldbot_description/meshes/nicefoot${side}.stl" scale="0.001 0.001 0.001"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0.05 ${lr * 0.01} -0.02" rpy="0 0 -1.570796327" /> <!-- TODO: guessed y offset -->
        <geometry>
          <mesh filename="package://boldbot_description/meshes/nicefoot${side}.stl" scale="0.001 0.001 0.001"/>
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0 0 0" />
        <mass value="0.1"/>
        <inertia ixx="1e-3"  ixy="0.0"  ixz="0.0" iyy="1e-3" iyz="0.0" izz="1e-3" />
      </inertial>
    </link>
    <gazebo reference="foot-${side}">
      <material>Gazebo/Grey</material>
      <selfCollide>true</selfCollide>
    </gazebo>
  </xacro:macro>

  <xacro:leg side="l"/>
  <xacro:leg side="r"/>

  <gazebo>
    <plugin name="boldbot_gazebo" filename="libboldbot_gazebo_plugin.so">
    </plugin>
  </gazebo>

</robot>
